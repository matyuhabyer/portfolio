            <img src="/assets/icons/fluent-color_certificate-32.svg" alt="Certifications Icon">
            <h2 class="about-title">Certifications</h2>
        </div>
        <div class="certifications-list">
            {{#each data.certifications}}
                <a class="certification-item" href="{{this.link}}" target="_blank" rel="noopener">
                    <div class="cert-text">
                        <p class="cert-title">{{this.title}}</p>
                        <p class="cert-issuer">{{this.issuer}}</p>
