<div class="portfolio-container">
    <aside class="sidebar">
        <div class="profile-card">
            <div class="profile-image-wrapper">
                <img src="/assets/images/profile-photo-1.jpg" data-hover-src="/assets/images/profile-photo-2.jpg" alt="{{data.profile.name}}">
            </div>
            <h1 class="profile-name">{{data.profile.name}}</h1>
            <p class="profile-title">
                <span class="typewriter" aria-live="polite"></span>
                <span class="typewriter-cursor" aria-hidden="true">|</span>
                <span class="typewriter-titles" aria-hidden="true">
                    {{#if data.profile.titles}}
                        {{#each data.profile.titles}}<span>{{this}}</span>{{/each}}
                    {{else}}
                        <span>{{data.profile.title}}</span>
                    {{/if}}
                </span>
            </p>
        </div>
        <div class="contact-list">
            <a href="mailto:{{data.profile.email}}" class="contact-item">
                <img src="/assets/icons/ic_baseline-email.svg" alt="Email icon">
                <span class="email">{{data.profile.email}}</span>
            </a>
            <a href="{{data.profile.linkedin}}" class="contact-item">
                <img src="/assets/icons/mdi_linkedin.svg" alt="LinkedIn icon">
                <span class="linkedin-name">{{data.profile.name}}</span>
            </a>
            <a href="{{data.profile.github}}" class="contact-item">
                <img src="/assets/icons/mdi_github.svg" alt="GitHub icon">
                <span class="github-username">@matyuhabyer</span>
            </a>
            <a href="{{data.profile.resume}}" class="contact-item" target="_blank">
                <img src="/assets/icons/mdi_resume.svg" alt="Resume icon">
                <span class="resume-name">Resume</span>
            </a>
        </div>
    </aside>
    <main class="main-content">
        <div class="navigation-bar">
            <a href="/about" class="nav-link {{#if (eq currentPage 'about')}}active{{/if}}">About</a>
            <a href="/projects" class="nav-link {{#if (eq currentPage 'projects')}}active{{/if}}">Projects</a>
        </div>

