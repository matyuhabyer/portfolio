<div class="project-detail">
    <div class="project-detail-nav">
        <a href="/projects" class="project-back-link">‚Üê Back to Projects</a>
    </div>

    <header class="project-detail-header">
        <h1 class="project-detail-title">{{project.name}}</h1>
        {{#if project.label}}<span class="project-detail-label">{{project.label}}</span>{{/if}}
        {{#if project.timeline}}<p class="project-detail-timeline">{{project.timeline}}</p>{{/if}}
        {{#if project.role}}<p class="project-detail-role">{{project.role}}</p>{{/if}}
    </header>

    {{#if project.heroImage}}
        <div class="project-detail-hero">
            <img src="{{project.heroImage}}" alt="{{project.name}} mockup">
        </div>
    {{/if}}

    <section class="project-detail-body">
        {{#if project.tech}}<p class="project-detail-tech"><strong>Skills & Tools:</strong> {{project.tech}}</p>{{/if}}
        {{#if project.longDescription}}<p class="project-detail-description">{{project.longDescription}}</p>{{/if}}

        {{#if project.highlights}}
            <div class="project-detail-highlights">
                <h2>Highlights</h2>
                <ul>
                    {{#each project.highlights}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}

        {{#if project.lessonsLearned}}
            {{#if (isUXProject project)}}
                <div class="project-detail-lessons">
                    <h2>Key Lessons Learned</h2>
                    <ul>
                        {{#each project.lessonsLearned}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
            {{/if}}
        {{/if}}

        {{#if project.ctaUrl}}
            <a href="{{project.ctaUrl}}" class="project-detail-cta" target="_blank" rel="noopener">
                {{#if project.ctaLabel}}{{project.ctaLabel}}{{else}}View Project{{/if}}
            </a>
        {{/if}}
    </section>
</div>

